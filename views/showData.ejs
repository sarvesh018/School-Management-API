<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Schools List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            color: #333;
        }

        h1 {
            text-align: center;
            color: #2c3e50;
            margin-top: 20px;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .school-item {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: #fafafa;
        }

        .school-item h2 {
            margin-top: 0;
            color: #2980b9;
        }

        .school-item p {
            margin: 5px 0;
        }

        .no-schools {
            text-align: center;
            font-size: 1.2em;
            color: #e74c3c;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Schools Near You</h1>
        <% if (schools.length === 0) { %>
            <p class="no-schools">No schools found nearby.</p>
        <% } else { %>
            <% schools.forEach(school => { %>
                <div class="school-item">
                    <h2><%= school.name %></h2>
                    <p>Address: <%= school.address %></p>
                    <p>Distance: <%= school.distance.toFixed(2) %> km</p>
                </div>
            <% }); %>
        <% } %>
    </div>
</body>
</html>